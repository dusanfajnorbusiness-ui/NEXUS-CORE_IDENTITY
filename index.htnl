    <script src="https://cdn.tailwindcss.com"></script>
    <style>
      body {
        background-color: #000;
        color: #fff;
        margin: 0;
        overflow-x: hidden;
      }
      .radar-circle {
        position: absolute;
        width: 200%;
        height: 200%;
        border: 1px solid;
        border-radius: 50%;
        top: -50%;
        left: -50%;
        animation: radar-pulse 4s infinite linear;
        opacity: 0.1;
      }
      @keyframes radar-pulse {
        0% {
          transform: scale(0);
          opacity: 0.5;
        }
        100% {
          transform: scale(1);
          opacity: 0;
        }
      }
      /* CODEX FX BURST */
      .fx-burst-core {
        position: absolute;
        top: 50%;
        left: 50%;
        width: 10px;
        height: 10px;
        background: #39ff14;
        border-radius: 50%;
        transform: translate(-50%, -50%);
        animation: burst-anim 0.8s ease-out forwards;
        z-index: 100;
      }
      @keyframes burst-anim {
        0% {
          transform: translate(-50%, -50%) scale(0);
          opacity: 1;
          box-shadow: 0 0 0px #39ff14;
        }
        100% {
          transform: translate(-50%, -50%) scale(40);
          opacity: 0;
          box-shadow: 0 0 100px #39ff14;
        }
      }
    </style>
  </head>
